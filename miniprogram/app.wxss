/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom,#fff,#99CCFF);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  -webkit-tap-highlight-color:rgba(0,0,0,0)!important;
  touch-action: none;
}
.bottom-submit-btn-box{
  position:fixed!important;
  left:10%;
  right:10%;
  bottom:2rem!important;
  z-index:9;
}
.page{
  width:100%;
  height:100%;
  overflow-y:auto;
}
.top-notice{
  position:fixed!important;
  left:0;
  right:0;
  top:0!important;
  z-index:9;
}
.info-title{
  width: 70px;
  font-size: 12px;
}
.info-detail{
  width: 70%;
  text-align: right;
}